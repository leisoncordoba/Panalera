@model PañaleraValentino.Models.Producto
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear</h2>

<div>
    <form action="/Producto/Guardar" method="post">
        <div class="form-group">
            <label for="idproducto">IdProducto: </label>
            <input type="text" class="form-control" name="IdProducto" id="IdProducto" />
        </div>
        <div class="form-group">
            <label for="idcategoria">IdCategoria: </label>
            <input type="text" class="form-control" name="idcategoria" id="idcategoria" />

        </div>

        <div class="form-group">
            <label for="idubicacion">IdUbicacion: </label>
            <input type="text" class="form-control" name="IdUbicacion" id="IdUbicacion" />

        </div>

        <div class="form-group">
            <label for="unidempaque">UnidEmpaque: </label>
            <input type="text" class="form-control" name="UnidEmpaque" id="UnidEmpaque" />

        </div>

        <div class="form-group">
            <label for="costounidad">CostoUnidad: </label>
            <input type="text" class="form-control" name="CostoUnidad" id="CostoUnidad" />

        </div>

        <div class="form-group">
            <label for="stock_final">Stock_Final: </label>
            <input type="text" class="form-control" name="Stock_Final" id="Stock_Final" />

        </div>

        <div class="form-group">
            <label for="descripcion">Descripcion: </label>
            <input type="text" class="form-control" name="Descripcion" id="Descripcion" />

        </div>

        <div class="form-group">
            <label for="cantminpedir">CantMinPedir: </label>
            <input type="text" class="form-control" name="CantMinPedir" id="CantMinPedir" />

        </div>

        <div class="form-group">
            <label for="cantmaxpedir">CantMaxPedir: </label>
            <input type="text" class="form-control" name="CantMaxPedir" id="CantMaxPedir" />

        </div>
          
        <div class="form-group">
            <label for="puntopedido">PuntoPedido: </label>
            <input type="text" class="form-control" name="PuntoPedido" id="PuntoPedido" />

        </div>

        <div class="form-group">
            <p><button class="btn btn-primary btn-lg" type="submit" role="button">Guardar</button></p>
        </div>
    </form>

</div>

