@model IEnumerable<PañaleraValentino.Models.Vendedores>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Index</h2>

<div class="row">
    <div class="col-lg-9">
        <h2>Index</h2>
    </div>
    <div class="col-lg-2">
        <p><a class="btn btn-primary btn-lg" href="/Vendedores/Crear" role="button">Crear Nuevo Vendedor</a></p>
    </div>

</div>

<div class="panel panel-default">
    <div class="panel-heading">Lista De Vendedores</div>
    <table class="table">
        <thead>
            <tr>
                <th>IdVendedor</th>
                <th>Nombre</th>
                <th>FechaDeRegistro</th>
                <th>Telefono</th>
                <th>Email</th>
            </tr>
        </thead>


        @foreach (var vend in Model) {

            <tr>
                <td>@vend.IdVendedor</td>
                <td>@vend.Nombre</td>
                <td>@vend.FechaDeRegistro</td>
                <td>@vend.Telefono</td>
                <td>@vend.Email</td>

                <td><a class="btn btn-primary btn-lg" href="/Vendedores/Editar/@vend.IdVendedor" role="button">Editar</a></td>
                <td><a class="btn btn-primary btn-lg" href="/Vendedores/Detalles/@vend.IdVendedor" target="_blank" role="button">Detalles</a></td>
                <td><a class="btn btn-primary btn-lg" href="/Vendedores/Eliminar/@vend.IdVendedor" role="button">Eliminar</a></td>

            </tr>

        }
    </table>


</div>