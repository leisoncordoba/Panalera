@model PañaleraValentino.Models.Vendedores
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<div>
    <form action="/Vendedores/Modificar" method="post">
        <div class="form-group">
            <label for="idvendedor">IdVendedor: </label>
            <label for="idvendedor" name="IdVendedor">@Model.IdVendedor</label>
            <input type="hidden" name="IdVendedor" value="@Model.IdVendedor" />

        </div>
        <div class="form-group">
            <label for="nombre">Nombre: </label>
            <input type="text" class="form-control" name="Nombre" value="@Model.Nombre" />
        </div>

        <div class="form-group">
            <label for="fechaderegistro">FechaDeRegistro: </label>
            <input type="text" class="form-control" name="FechaDeRegistro" value="@Model.FechaDeRegistro" />
        </div>

        <div class="form-group">
            <label for="telefono">Telefono: </label>
            <input type="text" class="form-control" name="Telefono" value="@Model.Telefono" />
        </div>

        <div class="form-group">
            <label for="email">Email: </label>
            <input type="text" class="form-control" name="Email" value="@Model.Email" />
        </div>
                
        <div class="form-group">
            <p><button class="btn btn-primary btn-lg" type="submit" role="button">Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/Vendedores/Index" role="button">Cancelar</a>
        </div>



    </form>




</div>

