@model PañaleraValentino.Models.Vendedores
@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <form action="/Vendedores/Modificar" method="post">
        <div class="form-group">

            <label for="idvendedor">IdVendedor: </label>
            <label for="idvendedor" name="IdVendedor">@Model.IdVendedor</label>
            <input type="hidden" name="IdVendedor" value="@Model.IdVendedor" />
        </div>
        <div class="form-group">
            <label for="nombre">Nombre: </label>
            <label for="nombre" name="Nombre">@Model.Nombre</label>
            <input type="hidden" name="Nombre" value="@Model.Nombre" />

        </div>

        <div class="form-group">
            <label for="fechaderegistro">FechaDeRegistro: </label>
            <label for="fechaderegistro" name="FechaDeRegistro">@Model.FechaDeRegistro</label>
            <input type="hidden" name="FechaDeRegistro" value="@Model.FechaDeRegistro" />

        </div>

        <div class="form-group">
            <label for="telefono">Telefono: </label>
            <label for="telefono" name="Telefono">@Model.Telefono</label>
            <input type="hidden" name="Telefono" value="@Model.Telefono" />

        </div>

        <div class="form-group">
            <label for="email">Email: </label>
            <label for="email" name="Email">@Model.Email</label>
            <input type="hidden" name="Email" value="@Model.Email" />

        </div>

        

        <div class="form-group">
            <br />
            <a class="btn btn-primary btn-lg" href="/Vendedores/Index" role="button">Regresar</a>

        </div>


    </form>





</div>
