@model  PañaleraValentino.Models.Categorias
@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <form action="/Categorias/Modificar" method="post">
        <div class="form-group">

            <label for="idcategoria">IdCategoria: </label>
            <label for="idcategoria" name="IdCategoria">@Model.IdCategoria</label>
            <input type="hidden" name="IdCategoria" value="@Model.IdCategoria" />
        </div>
        <div class="form-group">
            <label for="nombre">Nombre: </label>
            <label for="nombre" name="Nombre">@Model.Nombre</label>
            <input type="hidden" name="Nombre" value="@Model.Nombre" />

        </div>

        <div class="form-group">
            <label for="descripcion">Descripcion: </label>
            <label for="descripcion" name="Descripcion">@Model.Descripcion</label>
            <input type="hidden" name="Descripcion" value="@Model.Descripcion" />

        </div>



        <div class="form-group">
            <br />
            <a class="btn btn-primary btn-lg" href="/Categorias/Index" role="button">Regresar</a>

        </div>


    </form>





</div>