@model PañaleraValentino.Models.Categorias
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear</h2>

<div>
    <form action="/Categorias/Guardar" method="post">
        <div class="form-group">
            <label for="idubicacion">IdCategoria: </label>
            <input type="text" class="form-control" name="IdCategoria" id="IdCategoria" />
        </div>
        <div class="form-group">
            <label for="nombre">Nombre: </label>
            <input type="text" class="form-control" name="Nombre" id="Nombre" />

        </div>

        <div class="form-group">
            <label for="descripcion">Descripcion: </label>
            <input type="text" class="form-control" name="Descripcion" id="Descripcion" />

        </div>


        <div class="form-group">
            <p><button class="btn btn-primary btn-lg" type="submit" role="button">Guardar</button></p>
        </div>
    </form>

</div>