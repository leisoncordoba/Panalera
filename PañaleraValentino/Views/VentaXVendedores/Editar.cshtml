@model PañaleraValentino.Models.VentaXVendedores
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<div>
    <form action="/VentaXVendedores/Modificar" method="post">
        <div class="form-group">
            <label for="numventa">numventa: </label>
            <label for="numventa" name="numventa">@Model.numventa</label>
            <input type="hidden" name="numventa" value="@Model.numventa" />

        </div>
        <div class="form-group">
            <label for="idvendedor">IdVendedor: </label>
            <input type="text" class="form-control" name="IdVendedor" value="@Model.IdVendedor" />
        </div>

        <div class="form-group">
            <label for="idventa">IdVenta: </label>
            <input type="text" class="form-control" name="IdVenta" value="@Model.IdVenta" />
        </div>

        <div class="form-group">
            <label for="fechadeventa">FechaDeVenta: </label>
            <input type="text" class="form-control" name="FechaDeVenta" value="@Model.FechaDeVenta" />
        </div>

        <div class="form-group">
            <p><button class="btn btn-primary btn-lg" type="submit" role="button">Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/VentaXVendedores/Index" role="button">Cancelar</a>
        </div>



    </form>




</div>