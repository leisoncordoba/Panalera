@model PañaleraValentino.Models.Ventas
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<div>
    <form action="/Ventas/Modificar" method="post">
        <div class="form-group">
            <label for="idventa">IdVenta: </label>
            <label for="idventa" name="IdVenta">@Model.IdVenta</label>
            <input type="hidden" name="IdVenta" value="@Model.IdVenta" />

        </div>
        <div class="form-group">
            <label for="fecha">Fecha: </label>
            <input type="text" class="form-control" name="Fecha" value="@Model.Fecha" />
        </div>

        <div class="form-group">
            <label for="precio">Precio: </label>
            <input type="text" class="form-control" name="Precio" value="@Model.Precio" />
        </div>

        <div class="form-group">
            <label for="descuento">Descuento: </label>
            <input type="text" class="form-control" name="Descuento" value="@Model.Descuento" />
        </div>

        <div class="form-group">
            <label for="iva">IVA: </label>
            <input type="text" class="form-control" name="IVA" value="@Model.IVA" />
        </div>

        <div class="form-group">
            <label for="total">Total: </label>
            <input type="text" class="form-control" name="Total" value="@Model.Total" />
        </div>

        <div class="form-group">
        <p><button class="btn btn-primary btn-lg" type="submit" role="button">Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/Ventas/Index" role="button">Cancelar</a>
        </div>



    </form>




</div>