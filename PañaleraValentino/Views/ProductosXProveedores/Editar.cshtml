@model PañaleraValentino.Models.ProductosXProveedores
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<div>
    <form action="/ProductosXProveedores/Modificar" method="post">
        <div class="form-group">
            <label for="numpedido">NumPedido: </label>
            <label for="numpedido" name="NumPedido">@Model.NumPedido</label>
            <input type="hidden" name="NumPedido" value="@Model.NumPedido" />

        </div>
        <div class="form-group">
            <label for="idproveedor">IdProveedor: </label>
            <input type="text" class="form-control" name="IdProveedor" value="@Model.IdProveedor" />
        </div>

        <div class="form-group">
            <label for="idproducto">idProducto: </label>
            <input type="text" class="form-control" name="idProducto" value="@Model.idProducto" />
        </div>

        <div class="form-group">
            <label for="unidadespedidas">Unidadespedidas: </label>
            <input type="text" class="form-control" name="Unidadespedidas" value="@Model.Unidadespedidas" />
        </div>

        <div class="form-group">
            <label for="fechaentrega">FechaEntrega: </label>
            <input type="text" class="form-control" name="FechaEntrega" value="@Model.FechaEntrega" />
        </div>
                
        <div class="form-group">
            <p><button class="btn btn-primary btn-lg" type="submit" role="button">Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/ProductosXProveedores/Index" role="button">Cancelar</a>
        </div>



    </form>




</div>