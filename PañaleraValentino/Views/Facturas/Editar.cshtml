@model PañaleraValentino.Models.Facturas
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<div>
    <form action="/Facturas/Modificar" method="post">
        <div class="form-group">
            <label for="idFacturas">IdFacturas: </label>
            <label for="idfacturas" name="IdFacturas">@Model.IdFacturas</label>
            <input type="hidden" name="IdFacturas" value="@Model.IdFacturas" />

        </div>
        <div class="form-group">
            <label for="idproducto">IdProducto: </label>
            <input type="text" class="form-control" name="IdProducto" value="@Model.IdProducto" />
        </div>

        <div class="form-group">
            <label for="iva">IVA: </label>
            <input type="text" class="form-control" name="IVA" value="@Model.IVA" />
        </div>

        <div class="form-group">
            <label for="detalle">detalle: </label>
            <input type="text" class="form-control" name="detalle" value="@Model.detalle" />
        </div>

        <div class="form-group">
            <label for="Fecha">Fecha: </label>
            <input type="text" class="form-control" name="Fecha" value="@Model.Fecha" />
        </div>

        <div class="form-group">
            <label for="descuento">descuento: </label>
            <input type="text" class="form-control" name="descuento" value="@Model.descuento" />
        </div>

        <div class="form-group">
            <label for="subtotal">subtotal: </label>
            <input type="text" class="form-control" name="subtotal" value="@Model.subtotal" />
        </div>



        <div class="form-group">
            <label for="total">Total: </label>
            <input type="text" class="form-control" name="Total" value="@Model.Total" />
        </div>


        <div class="form-group">
            <p><button class="btn btn-primary btn-lg" type="submit" role="button">Guardar</button></p>
            <br />
            <a class="btn btn-primary btn-lg" href="/Facturas/Index" role="button">Cancelar</a>
        </div>



    </form>




</div>
