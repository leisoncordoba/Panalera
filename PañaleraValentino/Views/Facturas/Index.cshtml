@model IEnumerable<PañaleraValentino.Models.Facturas>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-lg-9">
        <h2>Index</h2>
    </div>
    <div class="col-lg-2">
        <p><a class="btn btn-primary btn-lg" href="/Facturas/Crear" role="button">Crear Nueva Factura</a></p>
    </div>

</div>

<div class="panel panel-default">
    <div class="panel-heading">Lista De Facturas</div>

    <table class="table">
        <thead>
            <tr>
                <th>IdFacturas</th>
                <th>IdCliente</th>
                <th>IdProducto</th>
                <th>IVA</th>
                <th>detalle</th>
                <th>Fecha</th>
                <th>descuento</th>
                <th>subtotal</th>
                <th>Total</th>

            </tr>

        </thead>
        @foreach (var fa in Model)
        {
            <tr>

                <td>@fa.IdFacturas</td>
                <td>@fa.IdCliente</td>
                <td>@fa.IdProducto</td>
                <td>@fa.IVA</td>
                <td>@fa.detalle</td>
                <td>@fa.Fecha</td>
                <td>@fa.descuento</td>
                <td>@fa.subtotal</td>
                <td>@fa.Total</td>




                <td><a class="btn btn-primary btn-lg" href="/Facturas/Editar/@fa.IdFacturas" role="button">Editar</a></td>
                <td><a class="btn btn-primary btn-lg" href="/Facturas/Detalles/@fa.IdFacturas" target="_blank" role="button">Detalles</a></td>
                <td><a class="btn btn-primary btn-lg" href="/Facturas/Eliminar/@fa.IdFacturas" role="button">Eliminar</a></td>
            </tr>

        }


    </table>



</div>
